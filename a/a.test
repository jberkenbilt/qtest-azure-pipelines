#!/usr/bin/env perl
require 5.008;
use warnings;
use strict;

require TestDriver;

my $td = new TestDriver('test');

$td->runtest("mingw",
	     {$td->COMMAND => "mingw/qpdf --static-id --empty --pages ?.pdf -- out.pdf"},
	     {$td->STRING => "", $td->EXIT_STATUS => 0});
$td->runtest("check output",
             {$td->FILE => "out.pdf"},
             {$td->FILE => "exp.pdf"});
$td->runtest("msvc",
	     {$td->COMMAND => "msvc/qpdf --static-id --empty --pages ?.pdf -- out.pdf"},
	     {$td->STRING => "", $td->EXIT_STATUS => 0});
$td->runtest("check output",
             {$td->FILE => "out.pdf"},
             {$td->FILE => "exp.pdf"});


$td->report(1);
