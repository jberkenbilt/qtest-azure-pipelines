#!/usr/bin/env perl
require 5.008;
use warnings;
use strict;

require TestDriver;

my $td = new TestDriver('test');

$td->runtest("mingw",
	     {$td->COMMAND => "cmd /c \"mingw\\qpdf --check mi?imal.pdf\""},
	     {$td->FILE => "minimal-check.out", $td->EXIT_STATUS => 0},
             $td->NORMALIZE_NEWLINES);
$td->runtest("msvc",
	     {$td->COMMAND => "cmd /c \"msvc\\qpdf --check mi?imal.pdf\""},
	     {$td->FILE => "minimal-check.out", $td->EXIT_STATUS => 0},
             $td->NORMALIZE_NEWLINES);

$td->report(2);
